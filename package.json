{
  "name": "example-mcp-server",
  "version": "1.0.0",
  "description": "A simple example MCP server with basic tools and resources",
  "type": "module",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start:http": "nodemon",
    "start:stdio": "node build/stdio-server.js",
    "start:stdio:oauth": "node build/stdio-server-with-oauth.js",
    "start:auth": "node build/auth-server/index.js",
    "get-tokens": "node build/get-oauth-tokens.js",
    "dev:http": "pnpx @modelcontextprotocol/inspector --config src/config.json --server rick_n_morty_http",
    "dev:stdio": "pnpx @modelcontextprotocol/inspector --config src/config.json --server rick_n_morty_stdio",
    "dev:auth": "nodemon --watch src/auth-server --exec node build/auth-server/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "server",
    "example"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "cors": "2.8.5",
    "express": "5.1.0",
    "graphql": "16.12.0",
    "graphql-request": "7.3.4"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "0.17.2",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.5",
    "@types/node": "^22.0.0",
    "@vitest/ui": "4.0.13",
    "nodemon": "3.1.11",
    "oauth2-mock-server": "8.2.0",
    "tsx": "4.20.6",
    "typescript": "^5.6.3",
    "vitest": "4.0.13"
  }
}
